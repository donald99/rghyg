<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/morewindow_bg"
                android:gravity="bottom|center_horizontal" >

    <TextView
            android:id="@+id/more_window_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:clickable="true"
            android:drawableTop="@drawable/tabbar_compose_idea"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:textColor="#ffffff"
            android:text="群组" />

    <TextView
            android:id="@+id/more_window_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:layout_toRightOf="@+id/more_window_group"
            android:clickable="true"
            android:drawableTop="@drawable/tabbar_compose_photo"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:textColor="#ffffff"
            android:text="照片"/>

    <TextView
            android:id="@+id/more_window_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/more_window_picture"
            android:clickable="true"
            android:drawableTop="@drawable/tabbar_compose_camera"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:textColor="#ffffff"
            android:text="任务"/>

    <TextView
            android:id="@+id/more_window_fourm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_window_group"
            android:layout_marginRight="30dip"
            android:clickable="true"
            android:drawableTop="@drawable/tabbar_compose_lbs"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:textColor="#ffffff"
            android:text="论坛"/>

    <TextView
            android:id="@+id/more_window_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_window_picture"
            android:layout_marginRight="30dip"
            android:layout_toRightOf="@+id/more_window_fourm"
            android:clickable="true"
            android:drawableTop="@drawable/tabbar_compose_review"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/more_window_item_margin"
            android:textColor="#ffffff"
            android:text="搜索"/>


    <ImageView
            android:id="@+id/center_music_window_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_window_search"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="78dip"
            android:layout_toRightOf="@+id/more_window_search" />

</RelativeLayout>